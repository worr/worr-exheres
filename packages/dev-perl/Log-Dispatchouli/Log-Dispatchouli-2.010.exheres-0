require perl-module [ module_author=RJBS ]

SUMMARY="a simple wrapper around Log::Dispatch"
DESCRIPTION="
Log::Dispatchouli is a thin layer above Log::Dispatch and meant to make it
dead simple to add logging to a program without having to think much about
categories, facilities, levels, or things like that.
"

SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-perl/Log-Dispatch
        dev-perl/Log-Dispatch-Array
        dev-perl/Params-Util
        dev-perl/PathTools
        dev-perl/String-Flogger
        dev-perl/Sub-Exporter
        dev-perl/Sub-Exporter-GlobExporter
        dev-perl/Try-Tiny
    test:
        dev-perl/Test-Deep
        dev-perl/Test-Fatal
        dev-perl/Test-Pod
"

BUGS_TO="will@worrbase.com"

